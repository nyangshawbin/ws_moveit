<?xml version="1.0" encoding="utf-8"?>

<robot name="arm" xmlns:xacro="http://www.ros.org/wiki/xacro"> 

  <xacro:include filename="$(find arm_description)/urdf/materials.xacro" />

  <!-- Virtual world joint -->
  <link name="world"/>

  <joint name="fixed" type="fixed">
    <parent link="world"/>
    <child link="base_link"/>
  </joint>

  <!-- Base link -->
  <link name="base_link">
    <inertial>
      <origin
        xyz="0 0 -0.3"
        rpy="0 0 0" />
      <mass
        value="0.1" />
      <inertia
        ixx="0.1"
        ixy="0"
        ixz="0"
        iyy="0.1"
        iyz="0"
        izz="0.1" />
    </inertial>
    <visual>
      <origin
        xyz="0 0 0.2"
        rpy="0 0 0" />
      <material
        name="blue">
      </material>
      <geometry>
        <cylinder length="0.4" radius="0.1"/>
      </geometry>
    </visual>
  </link>

  <!-- Link 1 -->
  <link name="link1">
    <visual>
      <material
        name="white">
      </material>
      <geometry>
        <box size="1 0.2 0.2"/>
      </geometry>
      <origin rpy="0 0 0" xyz="0.4 0 0"/>
    </visual>
  </link>

  <joint name="joint1" type="revolute">
    <axis xyz="0 0 1"/>
    <limit effort="1000.0" lower="-1.57" upper="1.57" velocity="0.5"/>
    <parent link="base_link"/>
    <child link="link1"/>
    <origin xyz="0 0 0.5"/>
  </joint>

  <!-- Link 2 -->
  <link name="link2">
    <visual>
      <material
        name="orange">
      </material>
      <geometry>
        <box size="0.6 0.15 0.15"/>
      </geometry>
      <origin rpy="0 0 0" xyz="-0.3 0 0"/>
    </visual>
  </link>

  <joint name="joint2" type="prismatic">
    <axis xyz="1 0 0"/>
    <limit effort="1000.0" lower="0" upper="0.6" velocity="0.5"/>
    <parent link="link1"/>
    <child link="link2"/>
    <origin xyz="0.9 0 0"/>
  </joint>
  
</robot>